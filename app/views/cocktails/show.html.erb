<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1547127796-06bb04e4b315?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1867&q=80);">
  <h1><%= @cocktail.name  %></h1>
</div>
<div class="card-description">
  <h3>This is how you mix it:</h3>
  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item">
        <%= dose.description %>
        <%= link_to "Remove", cocktail_dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
        </li>
    <% end %>
  </ul>
</div>

<%= link_to "Back to all cocktails", cocktails_path  %> ||
<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail)   %>
